{
  "name": "nekonomicon",
  "scopeName": "source.nekonomicon",
  "fileTypes": ["spell"],
  "patterns": [
    {
      "name": "string.quoted.single.nekonomicon",
      "begin": "'",
      "end": "'",
      "patterns": [
        {
          "name": "variable.scalar.interpolation.nekonomicon",
          "begin": "@\\{",
          "end": "\\}",
          "patterns": [
            {
              "name": "variable.scalar.interpolation.inner.nekonomicon",
              "match": "[a-zA-Z_][a-zA-Z0-9_]*"
            }
          ]
        },
        {
          "name": "variable.projection.interpolation.nekonomicon",
          "begin": "::\\{",
          "end": "\\}",
          "patterns": [
            {
              "name": "variable.projection.interpolation.inner.nekonomicon",
              "match": "[a-zA-Z_][a-zA-Z0-9_]*:[a-zA-Z_][a-zA-Z0-9_]*"
            }
          ]
        }
      ]
    },
    {
      "name": "comment.line.tilde.nekonomicon",
      "match": "~.*$"
    },
    {
      "name": "support.function.signature.nekonomicon",
      "match": "[ \\t]*\\b(trace|elapsed|timeout|silent|on)\\b"
    },
    {
      "name": "keyword.control.nekonomicon",
      "match": "[ \\t]*\\b(if|else|else if|end|repeat|while|increase|decrease|success|failure)\\b"
    },
    {
      "name": "keyword.special.nekonomicon",
      "match": "[ \\t]*\\b(is|as|into|with|without)\\b"
    },
    {
      "name": "entity.name.namespace.module.nekonomicon",
      "match": "^[ \\t]*([a-zA-Z][a-zA-Z0-9_-]*)"
    },
    {
      "name": "constant.language.boolean.nekonomicon",
      "match": "\\b(true|false)\\b"
    },
    {
      "name": "constant.numeric.nekonomicon",
      "match": "\\b\\d+\\b"
    },
    {
      "name": "constant.numeric.decimal.nekonomicon",
      "match": "\\b\\d+\\.\\d+\\b"
    },
    {
      "name": "variable.scalar.nekonomicon",
      "match": "@[a-zA-Z_][a-zA-Z0-9_]*"
    },
    {
      "name": "variable.projection.nekonomicon",
      "match": "::[a-zA-Z_][a-zA-Z0-9_]*(?::[a-zA-Z_][a-zA-Z0-9_]*)+"
    },
    {
      "name": "variable.object.nekonomicon",
      "match": "::[a-zA-Z_][a-zA-Z0-9_]*"
    },
    {
      "name": "keyword.operator.relation.nekonomicon",
      "match": "\\b(is)\\b"
    },
    {
      "name": "punctuation.terminator.nekonomicon",
      "match": "\\.(?=\\s*$)"
    }
  ],
  "uuid": "b1e7f1e2-7e8a-4b2a-9c0e-1a2b3c4d5e6f"
}
